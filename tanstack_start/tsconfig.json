{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,

    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["./lib/*"]
    }
  },

  "include": ["."]
}
